<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/holo_purple"
    tools:context=".ExamsListActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Exams List"
        android:textSize="25dp"
        android:textColor="@android:color/holo_red_light"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/id_english"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="English Exam"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        />
    <Button
        android:id="@+id/id_iq"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="IQ Exam"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/id_softskills"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Soft Skills Exam"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/id_math"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Math Exam"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/id_prog1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Programming Exam (C++)"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/id_prog2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Programming Exam (Java)"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

</LinearLayout>